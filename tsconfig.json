{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2020"],
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declarationMap": true
  },
  "include": [
    "lib/**/*",
    "../index.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
